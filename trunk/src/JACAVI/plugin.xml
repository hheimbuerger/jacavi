<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="images/icon/jacavi_icon_16x16.png"
            visible="true">
         <run
               class="de.jacavi.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.jacavi.rcp.perspectives.EditorPerspective"
            id="JACAVI.editorPerspective"
            name="Design">
      </perspective>
      <perspective
            class="de.jacavi.rcp.perspectives.RacePerspective"
            id="JACAVI.racePerspective"
            name="Race">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.jacavi.rcp.views.LapView"
            icon="images/views/laps_16x16.png"
            id="JACAVI.lapView"
            name="Lap View">
      </view>
      <view
            allowMultiple="false"
            class="de.jacavi.rcp.views.RaceView"
            icon="images/misc/placeholder_16x16.png"
            id="JACAVI.raceView"
            name="Race View">
      </view>
      <view
            class="de.jacavi.rcp.views.TileExplorer"
            icon="images/views/explorer_16x16.png"
            id="JACAVI.tileExplorerView"
            name="Tile Explorer"
            restorable="true">
      </view>
      <view
            class="de.jacavi.rcp.views.TrackOutline"
            icon="images/views/outline_16x16.png"
            id="JACAVI.trackOutline"
            name="Track Outline"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="JACAVI.defaultActionSet"
            label="Default Action Set"
            visible="true">
         <menu
               id="fileMenu"
               label="File">
            <groupMarker
                  name="fileGroup">
            </groupMarker>
         </menu>
      </actionSet>
      <actionSet
            id="JACAVI.editorActionSet"
            label="Editor Action Set">
         <action
               class="de.jacavi.rcp.actions.OpenTrackFileAction"
               icon="images/actions/open_track_16x16.png"
               id="JACAVI.loadTrackAction"
               label="Open Track..."
               menubarPath="trackMenu/trackGroup"
               style="push"
               tooltip="Open Track">
         </action>
         <menu
               id="settingsMenu"
               label="Settings"
               path="other">
            <groupMarker
                  name="settingsGroup">
            </groupMarker>
         </menu>
         <menu
               id="raceMenu"
               label="Race"
               path="other">
            <groupMarker
                  name="raceGroup">
            </groupMarker>
         </menu>
         <action
               class="de.jacavi.rcp.actions.StartRaceAction"
               icon="images/actions/start_race_16x16.png"
               id="JACAVI.StartRaceAction"
               label="&amp;Start Race"
               menubarPath="raceMenu/raceGroup"
               toolbarPath="raceGroup"
               tooltip="Start Race">
         </action>
         <action
               class="de.jacavi.rcp.actions.AgentSettingsAction"
               icon="images/actions/configure_agents_16x16.png"
               id="JACAVI.AgentSettingsAction"
               label="Configure Driving Agents..."
               menubarPath="settingsMenu/settingsGroup"
               style="push"
               toolbarPath="settingsGroup">
         </action>
         <action
               class="de.jacavi.rcp.actions.OpenConnectorSettingsAction"
               icon="images/actions/configure_connectors_16x16.png"
               id="JACAVI.OpenConnectorSettingsDialog"
               label="Configure Connectors..."
               menubarPath="settingsMenu/settingsGroup"
               style="push"
               toolbarPath="settingsGroup">
         </action>
         <action
               class="de.jacavi.rcp.actions.OpenInputDeviceSettingsAction"
               icon="images/actions/configure_controllers_16x16.png"
               id="JACAVI.OpenInputDeviceSettingsAction"
               label="Configure Input Devices..."
               menubarPath="settingsMenu/settingsGroup"
               style="push"
               toolbarPath="settingsGroup">
         </action>
         <action
               class="de.jacavi.rcp.actions.PlayerSettingsAction"
               icon="images/actions/configure_players_16x16.png"
               id="JACAVI.PlayerSettingsAction"
               label="Configure Players..."
               menubarPath="settingsMenu/settingsGroup"
               toolbarPath="settingsGroup">
         </action>
      </actionSet>
      <actionSet
            id="JACAVI.raceActionSet"
            label="Race Action Set">
         <menu
               id="raceMenu2"
               label="Race">
            <groupMarker
                  name="raceGroup2">
            </groupMarker>
         </menu>
         <action
               class="de.jacavi.rcp.actions.StopRaceAction"
               icon="images/actions/stop_race_16x16.png"
               id="JACAVI.stopRace"
               label="Stop Race"
               menubarPath="raceMenu2/raceGroup2"
               style="push"
               toolbarPath="raceGroup2">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.jacavi.rcp.editors.TrackDesigner"
            default="true"
            icon="images/views/designer_16x16.png"
            id="JACAVI.TrackDesigner"
            name="TrackDesigner">
      </editor>
   </extension>
   <extension
         id="JACAVI.newTrackWizards"
         name="New Track Wizards"
         point="org.eclipse.ui.newWizards">
      <wizard
            class="de.jacavi.rcp.wizards.NewDebugTrackWizard"
            icon="images/views/designer_16x16.png"
            id="JACAVI.NewDebugTrackWizard"
            name="New Debug Track">
      </wizard>
      <wizard
            class="de.jacavi.rcp.wizards.NewAnalogTrackWizard"
            icon="images/views/designer_16x16.png"
            id="JACAVI.NewAnalogTrackWizard"
            name="New Analog Track">
      </wizard>
      <wizard
            class="de.jacavi.rcp.wizards.NewDigitalTrackWizard"
            icon="images/views/designer_16x16.png"
            id="JACAVI.NewDigitalTrackWizard"
            name="New Digital Track">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="JACAVI.editorPerspective">
         <actionSet
               id="JACAVI.defaultActionSet">
         </actionSet>
         <actionSet
               id="JACAVI.editorActionSet">
         </actionSet>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="JACAVI.racePerspective">
         <actionSet
               id="JACAVI.defaultActionSet">
         </actionSet>
         <actionSet
               id="JACAVI.raceActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="JaCaVi.application"
            name="JaCaVi">
         <property
               name="appName"
               value="JaCaVi">
         </property>
         <property
               name="windowImages"
               value="images/icon/jacavi_icon_16x16.png,images/icon/jacavi_icon_32x32.png,images/icon/jacavi_icon_48x48.png,images/icon/jacavi_icon_64x64.png,images/icon/jacavi_icon_128x128.png">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="images/logo/about_banner_250x123.png">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="aboutText"
               value="JaCaVi v1.0.0&#x0A;http://www.jacavi.de/&#x0A;Released 2008-10-24&#x0A;&#x0A;(c) Copyright JaCaVi contributors and others 2008.  All rights reserved.&#x0A;&#x0A;This product includes software developed by the&#x0A;Apache Software Foundation http://www.apache.org/&#x0A;&#x0A;The following open source libraries are used in this application:&#x0A;• Java2D for SWT 2.3.0&#x0A;   http://www.holongate.org/holongate-2.0/&#x0A;   Eclipse Public License&#x0A;• JavaJoystick 0.7&#x0A;   http://sourceforge.net/projects/javajoystick/&#x0A;   Artistic License&#x0A;• WiiuseJ 0.12&#x0A;   http://code.google.com/p/wiiusej/&#x0A;   GNU General Public License v3&#x0A;• RXTXcomm&#x0A;   http://users.frii.com/jarvi/rxtx/&#x0A;   RXTX License v 2.1&#x0A;• Apache XML-RPC 3.1&#x0A;   http://ws.apache.org/xmlrpc/&#x0A;   Apache License, Version 2.0&#x0A;• Jython 2.2.1&#x0A;   http://www.jython.org/&#x0A;   Jython License&#x0A;• Groovy 1.5.6&#x0A;   http://groovy.codehaus.org/&#x0A;   Apache License, Version 2.0&#x0A;• Spring Framework 2.5.5&#x0A;   http://www.springframework.org/&#x0A;   Apache License, Version 2.0&#x0A;• log4j 1.2.15&#x0A;   http://logging.apache.org/log4j/&#x0A;   Apache License, Version 2.0&#x0A;&#x0A;Icons are provided by:&#x0A;• The fantastic famfamfam &apos;Silk&apos; icon set&#x0A;   http://www.famfamfam.com/lab/icons/silk/&#x0A;   Creative Commons Attribution 2.5 License&#x0A;• The KDE Icon Theme by Futurosoft&#x0A;   http://kde-look.org/content/show.php/Futurosoft+Icons+?content=50667&#x0A;   GNU General Public License&#x0A;&#x0A;Developers: &#x0A;Stefanos Papadopoulos (elgreco_04@hotmail.com)&#x0A;Henrik Heimbuerger (henrik@heimbuerger.de)&#x0A;Fabian Rohn (fabrohn@htwg-konstanz.de)&#x0A;Florian Roth (froth@htwg-konstanz.de)&#x0A;&#x0A;Special thanks to the Lib42 Team and the Bluerider Team for creating the slot car system connectors this application is based on.&#x0A;&#x0A;Special thanks to juckto, MrChaos, ImmortalZ and Being from IRC for di