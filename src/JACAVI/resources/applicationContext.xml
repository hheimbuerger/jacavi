<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<import resource="configurationBeans.xml"/>
	<bean id="applicationManager" class="de.jacavi.appl.ApplicationManager">
		<property name="race" ref="raceBean" />
	</bean>
	<bean id="raceBean" class="de.jacavi.appl.racelogic.Race">
		<!-- <property name="track" ref="track1Bean"/> -->
		<property name="players" ref="playersBean" />
	</bean>
	
	<!-- <bean id="track1Bean" class="de.jacavi.appl.valueobjects.Track" /> -->
	<bean id="tilesetRepository" class="de.jacavi.appl.track.TilesetRepository">
		<constructor-arg type="java.lang.String" value="/tiles/tiles.xml" />
	</bean>
	
	<bean id="raceEngineBean" class="de.jacavi.appl.racelogic.RaceEngine"> 
		<constructor-arg ref="raceBean"></constructor-arg>
		<property name="raceTimerInterval" ref="raceTimerIntervalValueBean"></property>
	</bean>
	
	<bean id="nativeLibraryFactoryBean" class="de.jacavi.hal.FirstCarreraNativeLibraryFactory">
	</bean> 
	
	


	<bean id="playersBean" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<bean id="player1" class="de.jacavi.appl.racelogic.Player">
					<property name="id" value="1" />
					<property name="name" value="Player 1" />
					<property name="controller">
						<bean id="mouseControlBean" class="de.jacavi.appl.controller.device.impl.Mouse" />
					</property><!--
					<property name="technologyController" ref="lib42technologyBean"/>
				--></bean>
				<bean id="player2" class="de.jacavi.appl.racelogic.Player">
					<property name="id" value="2" />
					<property name="name" value="Player 2" /><!--
					<property name="technologyController" ref="lib42technologyBean" />
					--><property name="controller">
						<bean id="wiimoteControlBean" class="de.jacavi.appl.controller.device.impl.Wiimote" />
					</property>
				</bean>
			</list>
		</constructor-arg>
	</bean>
</beans>